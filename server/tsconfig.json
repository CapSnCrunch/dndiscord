{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    
    /* Modules */
    "module": "esnext",
    "moduleResolution": "bundler",
    "rootDir": "./src",
    "rewriteRelativeImportExtensions": true,
    
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    /* Type Checking */
    "strict": true,
    
    /* Completeness */
    "skipLibCheck": true,
    
    /* Emit */
    "outDir": "./dist"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

